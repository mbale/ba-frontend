.form--horizontal
  .form-field
    flex-direction: column
  .form-field--actions
    text-align center
    .form-btn
      width 100%

.form-field
  display flex
  align-items center
  border 0
  +below(3)
    flex-direction: column
  & + .form-field
    margin-top 15px
  &.form-field--actions
    margin-top 20px

.form-label
  font-weight bold
  margin-bottom 5px
  flex 1
  width 100%

.form-input
  flex 3
  width 100%

.form-field__info
  color $lgray
  padding 5px 0 0 0
  font-size 13px

.form-label__forgot
  float right
  font-size 13px

input
  &:focus
    outline 0

.input-container--has-errors
  .input-text
    border-color rgba($red,.5)
    box-shadow: 0 0 3px rgba($red,.3)
    &:focus
      border-color rgba($red,.5)
      box-shadow: 0 0 3px rgba($red,.3)

.input-container
  position relative
  display flex
  flex-flow column wrap
  flex-direction inherit

.input-container__icon--right
  position absolute
  top 0
  right 0

.input-container__icon
  padding 10px
  color $mgray
  &:hover
    color $mgray
  .icon
    display block
  & + .input-text
    border-radius 0 2px 2px 0


.input-container__icon--button
  cursor pointer
  &:hover
    color $blue

.input-text, .input-textarea
  font-size inherit
  flex 1
  width 100%
  background-color #fff
  padding 10px 40px 10px 10px
  border-radius 2px
  border 1px solid #ceced9
  &:focus
    border-color rgba($blue,.5)
    box-shadow 0 0 3px rgba($blue,.3)

.input-textarea
  min-height 100px

.input-select
  appearance none
  flex 1
  width 100%
  background-color #f9f9f9
  background-image url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='100' height='100' fill='#62626f'><polygon points='0,0 100,0 50,50'/></svg>")
  background-repeat no-repeat
  background-size 12px
  background-position calc(100% - 20px) 14px
  box-shadow inset 0 1px 0 #fff
  padding 10px 40px 10px 10px
  border-radius 2px
  cursor pointer
  font-size inherit
  border 1px solid #ceced9
  &::-ms-expand
    display: none

.input-container__errors
  width 100%
  color $red
  padding-top 5px
  font-size 13px

.form-btn
  button()
  padding 10px 30px
  +below(3)
    width: 100%

.form-btn--disabled
  background-color #d8d8d8
  &:hover
    background-color #d8d8d8

.form-errors
  color $red
  margin-top 10px

.form-success
  color $green
  text-align center

.form-submitted--success
  color $green
  display inline-block
  margin 0 15px
  font-weight bold

// Specific fields
.form-avatar__current
  width 80px
  height 80px
  margin-right 10px
  float left

.form-avatar__upload
  padding 20px
  height 80px
  background-color #f9f9f9
  border 1px dashed #ceced9
  color #807e8a
  overflow hidden
  display flex
  flex-direction column
  justify-content center
  align-items center
  cursor pointer

.form-avatar__upload--accepted
  border-color #9e9ea6
  color $purplegray

.form-avatar__upload--declined
  border-color $red
  color $red

.avatar-upload-success
  color $green

.form-avatar__restrictions
  display block
  padding-top 5px
  font-size 13px

.form-avatar__delete
  button($red)
  padding 7px 15px
  display inline-block
  font-family: $font-opensans
  font-size: 13px;
  margin-top: 10px;
