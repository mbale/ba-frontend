.content
  display flex
  justify-content space-between
  flex-wrap wrap
  width: 100%

  &.profile-content
    flex-direction: column
    justify-content: baseline

.content-aside
  width 300px

.content-body
  padding 20px
  flex 1
  margin 0 auto
  +below(3)
    padding 20px

  &.profile-body
    flex: 0 0 auto
    width: 100%

  p
    line-height 1.75
    margin-bottom 20px
    &:last-child
      margin 0
    img
      display block
      max-width 100%

  > h1
    font-size 30px

  > h2
    margin-bottom 15px
    font-size 23px
    color #4d4d4d

  > h3
    margin-bottom 5px
    font-size 17px
    color #4d4d4d

  ul:not(.pagination)
    margin 0 0 20px 20px
  li
    margin-bottom 5px

  dt
    font-weight 700
    margin-bottom 5px
  dd
    margin-bottom 15px
    &:last-child
      margin 0

.content-title
  color $purple
  font-size 22px
  margin-bottom 10px
  display block
  font-size 26px

p
  margin-bottom 10px
  &:last-child
    margin-bottom 0

.content-list
  padding-left 20px
  margin-bottom 20px
  li
    margin-bottom 15px

  ul
    margin-top 10px
    li
      margin-bottom 5px

.content__body-btn
  display inline-block
  margin-top 10px
  border 1px solid #000
  border-radius 2px
  padding 7px 10px
  color $blue
  font-size 12px
  border-color lighten($blue, 40%)
  background none
  user-select none
  outline none
  margin-right 10px
  cursor pointer
  &:hover
    border-color $blue
  &.content__body-btn--filled
    background-color $blue
    border-color $blue
    color #fff
    &:hover
      background darken($blue, 10%)
      border-color darken($blue, 10%)

.content__table
  width 100%
  border-spacing 1px
  border-collapse separate
  text-align left
  font-size 14px
  tr
    background #F5F5F5
    &:nth-child(odd)
      background rgba(#F5F5F5, .5)
  td, th
    padding 8px 15px
  th
    white-space nowrap
    width 1px
