.content
  display flex

.content-aside
  flex 0 1 300px
  padding 30px 0 30px 30px

.content-body
  margin 30px
  flex 0 1 100%
  color $purplegray
  background-color: #fff
  padding 30px

  &--bookmaker-asset
    margin 25px
    margin-top 15px
    margin-left 0

  p
    line-height 1.75
    margin-bottom 20px
    &:last-child
      margin 0
    img
      display block
      max-width 100%

  > h1
    font-size 30px

  h2
    margin-bottom 15px
    font-size 23px
    color #4d4d4d

  h3
    margin-bottom 5px
    font-size 17px
    color #4d4d4d

  li
    margin-bottom 5px

  dt
    font-weight 700
    margin-bottom 5px
  dd
    margin-bottom 15px
    &:last-child
      margin 0

.content-title
  color $purple
  font-size 22px
  margin-bottom 10px
  display block
  font-size 26px

p
  margin-bottom 10px
  &:last-child
    margin-bottom 0

.content-list
  margin-bottom 20px
  list-style initial
  li
    margin-bottom 10px
    margin-left 20px

  ul
    margin-top 10px
    li
      margin-bottom 5px

.content__body-btn
  display inline-block
  margin-top 10px
  border 1px solid #000
  border-radius 2px
  padding 7px 10px
  color $blue
  font-size 12px
  border-color lighten($blue, 40%)
  background none
  user-select none
  outline none
  margin-right 10px
  cursor pointer
  &:hover
    border-color $blue
  &.content__body-btn--filled
    background-color $blue
    border-color $blue
    color #fff
    &:hover
      background darken($blue, 10%)
      border-color darken($blue, 10%)

.content__table
  width 100%
  border-spacing 1px
  border-collapse separate
  text-align left
  font-size 13px
  tr
    background #F5F5F5
    &:nth-child(odd)
      background rgba(#F5F5F5, .5)
  td, th
    padding 8px 15px
  td:first-child
    white-space nowrap
  th
    white-space nowrap
    width 1px
