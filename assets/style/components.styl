/*
  Button
*/

.button
  display flex
  justify-content center
  align-items center
  padding 10px 30px
  font-size 1em
  user-select none
  cursor pointer
  font-weight 700

  &--primary
    background-color #408fec
    color #fff

  &__disabled
    cursor default
    background-color #bdc3c7

/*
  Typography
*/

.header-text
  display flex
  justify-content flex-start
  align-items center
  color #99a7bc
  user-select none

  &--one
    color #000
    font-size 1.5em

  &--two
    font-size 1.2em
    font-weight 400
    border-bottom 1px solid #d2d7d3
    margin-bottom 25px
    padding-bottom 10px

  &--three
    font-weight 800
    font-size 1em

  &--four
    font-size 0.9em
    font-weight 600
    margin 0px 5px

/*
  Inputs
*/

.textbox
  flex 1
  max-width 70%
  height 125px
  padding 15px
  border 1px solid #ceced9
  border-radius 2px
  color #494949
  font-size 100%
  background-color #fff

  +below(992px)
    max-width 100%


/*
  Grouping
*/

.row
  display flex
  justify-content flex-start
  margin 15px 0px

.col
  display flex
  flex-direction column
  margin-right 15px

  &--start
    justify-content flex-start
    align-items flex-start

  &--center
    justify-content center
    align-items center


/*
  PanelBase
*/

.panel
  background-color #fff
  padding 25px

  &--vertical
    display flex
    flex-direction column